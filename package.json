    "generate:pseudo-locale": "ts-node --compiler-options '{\"module\":\"commonjs\"}' scripts/generate-pseudo-locale.ts",
    "add-locale": "ts-node --compiler-options '{\"module\":\"commonjs\"}' scripts/add-locale.ts",
    "ethics:aggregate": "node scripts/aggregate-ethics.mjs",
    "ethics:validate": "node scripts/validate-ethics-data.mjs",
    "ethics:ledger-update": "node scripts/ledger-update.mjs",
    "ethics:verify-ledger": "node scripts/verify-ledger.mjs",
    "ethics:badge": "node scripts/generate-ethics-badge.mjs",
    "ci": "npm run validate:translations && npm run validate && npm run build && npm run build-storybook",
    "vercel-build": "npm install --legacy-peer-deps && npm run build"
