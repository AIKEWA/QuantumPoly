  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:tw-colors": "grep -rn \"\\(bg\\|text\\|border\\|from\\|via\\|to\\)-\\[\\(#\\|rgb\\|hsl\\)\" src/ || true",
    "lint:strict": "npm run lint -- --max-warnings=0 && npm run lint:tw-colors && echo OK",
