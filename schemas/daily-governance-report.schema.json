{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://quantumpoly.ai/schemas/daily-governance-report.schema.json",
  "title": "Daily Governance Report Schema",
  "description": "Schema for daily governance reports combining monitoring, integrity, feedback, and trust metrics (Block 10.7)",
  "type": "object",
  "required": [
    "report_id",
    "timestamp",
    "report_date",
    "verified",
    "hash",
    "system_health",
    "governance_links"
  ],
  "properties": {
    "report_id": {
      "type": "string",
      "pattern": "^daily-governance-\\d{4}-\\d{2}-\\d{2}$",
      "description": "Unique report identifier in format: daily-governance-YYYY-MM-DD",
      "examples": ["daily-governance-2025-11-05"]
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 UTC timestamp of report generation"
    },
    "report_date": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
      "description": "Date of the report in YYYY-MM-DD format"
    },
    "verified": {
      "type": "boolean",
      "description": "Whether the report has been verified for integrity"
    },
    "hash": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$",
      "description": "SHA-256 hash of report content for integrity verification"
    },
    "system_health": {
      "type": "object",
      "required": ["status"],
      "properties": {
        "status": {
          "type": "string",
          "enum": ["healthy", "degraded", "attention_required"],
          "description": "Overall system health status"
        },
        "api_endpoints": {
          "type": ["object", "null"],
          "properties": {
            "passed": {
              "type": "integer",
              "minimum": 0
            },
            "total": {
              "type": "integer",
              "minimum": 0
            },
            "success_rate": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            },
            "details": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "endpoint": { "type": "string" },
                  "url": { "type": "string" },
                  "status": { "type": "string", "enum": ["passed", "failed"] },
                  "status_code": { "type": ["integer", "null"] },
                  "response_time_ms": { "type": ["number", "null"] },
                  "response_time_acceptable": { "type": "boolean" },
                  "merkle_root_valid": { "type": ["boolean", "null"] },
                  "notes": { "type": ["string", "null"] },
                  "checked_at": { "type": "string", "format": "date-time" }
                },
                "required": ["endpoint", "url", "status", "checked_at"]
              }
            }
          },
          "required": ["passed", "total", "success_rate", "details"]
        },
        "tls_certificate": {
          "type": ["object", "null"],
          "properties": {
            "valid": { "type": "boolean" },
            "issuer": { "type": ["string", "null"] },
            "subject": { "type": ["string", "null"] },
            "valid_from": { "type": ["string", "null"] },
            "valid_to": { "type": ["string", "null"] },
            "days_remaining": { "type": ["integer", "null"] },
            "fingerprint": { "type": ["string", "null"] },
            "error": { "type": ["string", "null"] }
          },
          "required": ["valid"]
        },
        "response_time_avg_ms": {
          "type": ["number", "null"],
          "minimum": 0
        }
      }
    },
    "integrity_status": {
      "type": ["object", "null"],
      "properties": {
        "last_verification": {
          "type": "string",
          "format": "date-time"
        },
        "ledger_health": {
          "type": "object",
          "properties": {
            "governance": { "type": "string", "enum": ["valid", "degraded", "critical"] },
            "consent": { "type": "string", "enum": ["valid", "degraded", "critical"] },
            "federation": { "type": "string", "enum": ["valid", "degraded", "critical"] },
            "trust_proofs": { "type": "string", "enum": ["valid", "degraded", "critical"] }
          }
        },
        "open_issues": {
          "type": "integer",
          "minimum": 0
        },
        "auto_repaired": {
          "type": "integer",
          "minimum": 0
        },
        "pending_reviews": {
          "type": "integer",
          "minimum": 0
        },
        "global_merkle_root": {
          "type": ["string", "null"],
          "pattern": "^([a-f0-9]{64})?$"
        }
      },
      "required": ["last_verification", "ledger_health", "open_issues", "auto_repaired", "pending_reviews"]
    },
    "ethical_metrics": {
      "type": "object",
      "properties": {
        "eii_current": {
          "type": ["number", "null"],
          "minimum": 0,
          "maximum": 100
        },
        "eii_7day_avg": {
          "type": ["number", "null"],
          "minimum": 0,
          "maximum": 100
        },
        "eii_trend": {
          "type": ["string", "null"],
          "enum": ["improving", "stable", "declining", null]
        },
        "trust_score_avg": {
          "type": ["number", "null"],
          "minimum": 0,
          "maximum": 1
        },
        "consent_metrics": {
          "type": ["object", "null"],
          "properties": {
            "total_events": { "type": "integer", "minimum": 0 },
            "opt_in_events": { "type": "integer", "minimum": 0 },
            "opt_in_rate": { "type": "number", "minimum": 0, "maximum": 1 }
          }
        }
      }
    },
    "feedback_summary": {
      "type": ["object", "null"],
      "properties": {
        "new_submissions_24h": {
          "type": "integer",
          "minimum": 0
        },
        "open_items": {
          "type": "integer",
          "minimum": 0
        },
        "resolved_items": {
          "type": "integer",
          "minimum": 0
        },
        "average_trust_score": {
          "type": ["number", "null"],
          "minimum": 0,
          "maximum": 1
        }
      }
    },
    "federation_status": {
      "type": ["object", "null"],
      "properties": {
        "partners_verified": {
          "type": "integer",
          "minimum": 0
        },
        "network_health": {
          "type": "string",
          "enum": ["healthy", "degraded", "critical", "unknown"]
        },
        "last_verification": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "recommendations": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "priority": {
            "type": "string",
            "enum": ["critical", "high", "medium", "low"]
          },
          "category": {
            "type": "string",
            "enum": ["availability", "security", "performance", "integrity", "ethics"]
          },
          "action": {
            "type": "string",
            "minLength": 5,
            "maxLength": 500
          },
          "details": {
            "type": "string",
            "minLength": 5,
            "maxLength": 1000
          }
        },
        "required": ["priority", "category", "action", "details"]
      }
    },
    "governance_links": {
      "type": "object",
      "required": ["ledger_entry"],
      "properties": {
        "ledger_entry": {
          "type": "string",
          "description": "Reference to governance ledger entry ID"
        },
        "integrity_report": {
          "type": ["string", "null"],
          "description": "Path to integrity report file"
        },
        "monitoring_report": {
          "type": ["string", "null"],
          "description": "Path to monitoring report file"
        }
      }
    },
    "data_quality": {
      "type": "object",
      "properties": {
        "monitoring_available": { "type": "boolean" },
        "integrity_available": { "type": "boolean" },
        "feedback_available": { "type": "boolean" },
        "federation_available": { "type": "boolean" },
        "completeness_score": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      },
      "required": ["monitoring_available", "integrity_available", "feedback_available", "federation_available", "completeness_score"]
    }
  },
  "additionalProperties": false
}

