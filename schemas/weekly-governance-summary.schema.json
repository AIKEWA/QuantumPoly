{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://quantumpoly.ai/schemas/weekly-governance-summary.schema.json",
  "title": "Weekly Governance Summary Schema",
  "description": "Schema for weekly governance summaries aggregating 7 daily reports with trend analysis (Block 10.7)",
  "type": "object",
  "required": [
    "summary_id",
    "timestamp",
    "week",
    "period",
    "daily_reports_included",
    "hash",
    "verified"
  ],
  "properties": {
    "summary_id": {
      "type": "string",
      "pattern": "^weekly-\\d{4}-W\\d{2}$",
      "description": "Unique summary identifier in format: weekly-YYYY-WWW",
      "examples": ["weekly-2025-W45"]
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 UTC timestamp of summary generation"
    },
    "week": {
      "type": "string",
      "pattern": "^\\d{4}-W\\d{2}$",
      "description": "ISO week number in YYYY-WWW format"
    },
    "period": {
      "type": "object",
      "required": ["start", "end"],
      "properties": {
        "start": {
          "type": "string",
          "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
          "description": "Start date of the week (Monday)"
        },
        "end": {
          "type": "string",
          "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
          "description": "End date of the week (Sunday)"
        }
      }
    },
    "daily_reports_included": {
      "type": "integer",
      "minimum": 0,
      "maximum": 7,
      "description": "Number of daily reports included in summary"
    },
    "hash": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$",
      "description": "SHA-256 hash of summary content for integrity verification"
    },
    "verified": {
      "type": "boolean",
      "description": "Whether the summary has been verified for integrity"
    },
    "system_health_summary": {
      "type": "object",
      "properties": {
        "healthy_days": {
          "type": "integer",
          "minimum": 0,
          "maximum": 7
        },
        "degraded_days": {
          "type": "integer",
          "minimum": 0,
          "maximum": 7
        },
        "critical_days": {
          "type": "integer",
          "minimum": 0,
          "maximum": 7
        },
        "uptime_percentage": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        },
        "avg_response_time_ms": {
          "type": ["number", "null"],
          "minimum": 0
        }
      },
      "required": ["healthy_days", "degraded_days", "critical_days"]
    },
    "integrity_summary": {
      "type": "object",
      "properties": {
        "total_verifications": {
          "type": "integer",
          "minimum": 0
        },
        "auto_repairs": {
          "type": "integer",
          "minimum": 0
        },
        "pending_reviews_avg": {
          "type": "number",
          "minimum": 0
        },
        "ledger_health_stability": {
          "type": "string",
          "enum": ["stable", "unstable", "degrading", "improving"]
        }
      }
    },
    "ethical_metrics_summary": {
      "type": "object",
      "properties": {
        "eii_mean": {
          "type": ["number", "null"],
          "minimum": 0,
          "maximum": 100
        },
        "eii_stddev": {
          "type": ["number", "null"],
          "minimum": 0
        },
        "eii_min": {
          "type": ["number", "null"],
          "minimum": 0,
          "maximum": 100
        },
        "eii_max": {
          "type": ["number", "null"],
          "minimum": 0,
          "maximum": 100
        },
        "trust_score_mean": {
          "type": ["number", "null"],
          "minimum": 0,
          "maximum": 1
        },
        "trust_score_stddev": {
          "type": ["number", "null"],
          "minimum": 0
        },
        "trust_trend": {
          "type": ["string", "null"],
          "enum": ["improving", "stable", "declining", null]
        }
      }
    },
    "feedback_summary": {
      "type": "object",
      "properties": {
        "new_submissions": {
          "type": "integer",
          "minimum": 0
        },
        "resolved_items": {
          "type": "integer",
          "minimum": 0
        },
        "open_items_eow": {
          "type": "integer",
          "minimum": 0,
          "description": "Open items at end of week"
        },
        "avg_resolution_time_days": {
          "type": ["number", "null"],
          "minimum": 0
        }
      }
    },
    "anomalies": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "date": {
            "type": "string",
            "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
          },
          "type": {
            "type": "string",
            "enum": ["degraded_state", "critical_state", "integrity_break", "performance_degradation", "security_alert", "data_quality_issue"]
          },
          "reason": {
            "type": "string",
            "minLength": 5,
            "maxLength": 500
          },
          "resolved": {
            "type": "boolean"
          }
        },
        "required": ["date", "type", "reason", "resolved"]
      }
    },
    "recommendations": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "priority": {
            "type": "string",
            "enum": ["critical", "high", "medium", "low"]
          },
          "action": {
            "type": "string",
            "minLength": 5,
            "maxLength": 500
          },
          "rationale": {
            "type": "string",
            "minLength": 5,
            "maxLength": 1000
          }
        },
        "required": ["priority", "action", "rationale"]
      }
    },
    "daily_report_files": {
      "type": "array",
      "items": {
        "type": "string",
        "description": "Path to daily report file"
      }
    }
  },
  "additionalProperties": false
}

